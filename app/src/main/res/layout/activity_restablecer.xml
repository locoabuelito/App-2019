<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.RestablecerActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextLabel"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/txt_restablecer"
        android:layout_marginTop="150dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restablecer_email"
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:hint="Email para restablecer contraseña!"
            android:layout_marginHorizontal="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_restablecer"
        android:layout_below="@+id/txt_restablecer"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/rounded_button"
        android:text="Enviar contraseñas"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progreso_restablecer"
        android:layout_below="@id/btn_restablecer"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>

</RelativeLayout>