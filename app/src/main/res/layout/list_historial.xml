<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutABorrar"
    android:clickable="true"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- PUERTAS -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/cardview_1"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        android:background="?android:attr/selectableItemBackground">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/puertas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESTADO DE BLOQUEO - DESBLOQUEO DE PUERTAS"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/estado_puertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="ACTIVADO - DESACTIVADO"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha"
                    android:text="Fecha: "/>

                <TextView
                    android:id="@+id/fecha_puertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="26"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:id="@+id/hora"
                    android:text="Hora: " />

                <TextView
                    android:id="@+id/hora_puertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90" />

            </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CORRIENTE -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/cardview_2"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        android:background="?android:attr/selectableItemBackground">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/corriente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ESTADO DE BLOQUEO - DESBLOQUEO DE CORRIENTE"/>
                </LinearLayout>

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/estado_corriente"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVADO - DESACTIVADO"/>
            </LinearLayout>

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fechac"
                    android:text="Fecha: "/>

                <TextView
                    android:id="@+id/fecha_corriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="26"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:id="@+id/horac"
                    android:text="Hora: " />

                <TextView
                    android:id="@+id/hora_corriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90" />

            </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

